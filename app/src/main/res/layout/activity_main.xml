<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/displayLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="30sp" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/displayLayout"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="2"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/basic_button_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/editText"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/first_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/regular_button_weight">

                <Button
                    android:id="@+id/button_c"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorAdvancedArithmeticButton"
                    android:text="@string/button_clear"
                    android:textColor="@color/colorAdvancedArithmeticText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_arithmetic_sign"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorAdvancedArithmeticButton"
                    android:text="@string/button_arithmetic_sign"
                    android:textColor="@color/colorAdvancedArithmeticText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_percentage"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorAdvancedArithmeticButton"
                    android:text="@string/button_percentage"
                    android:textColor="@color/colorAdvancedArithmeticText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_divide"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorBasicArithmeticButton"
                    android:text="@string/button_divide"
                    android:textColor="@color/colorBasicArithmeticText"
                    android:textSize="@dimen/regular_button_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/second_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/regular_button_weight">

                <Button
                    android:id="@+id/button_seven"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_seven"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_eight"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_eight"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_nine"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_nine"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_multiply"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorBasicArithmeticButton"
                    android:text="@string/button_multiply"
                    android:textColor="@color/colorBasicArithmeticText"
                    android:textSize="@dimen/regular_button_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/third_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/regular_button_weight">

                <Button
                    android:id="@+id/button_four"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_four"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_five"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_five"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_six"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_six"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_minus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorBasicArithmeticButton"
                    android:text="@string/button_subtract"
                    android:textColor="@color/colorBasicArithmeticText"
                    android:textSize="@dimen/regular_button_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourth_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/regular_button_weight">

                <Button
                    android:id="@+id/button_one"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_one"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_two"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_two"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_three"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_three"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_plus"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorBasicArithmeticButton"
                    android:text="@string/button_add"
                    android:textColor="@color/colorBasicArithmeticText"
                    android:textSize="@dimen/regular_button_size" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fifth_row"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="@dimen/regular_button_weight">

                <Button
                    android:id="@+id/button_zero"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_zero"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_comma"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_half_weight"
                    android:background="@color/colorNumericButton"
                    android:text="@string/button_comma"
                    android:textColor="@color/colorNumericText"
                    android:textSize="@dimen/regular_button_size" />

                <Button
                    android:id="@+id/button_equal"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="@dimen/regular_button_width"
                    android:layout_height="match_parent"
                    android:layout_weight="@dimen/regular_button_half_weight"
                    android:background="@color/colorBasicArithmeticButton"
                    android:text="@string/button_equal"
                    android:textColor="@color/colorBasicArithmeticText"
                    android:textSize="@dimen/regular_button_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>