<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenMode" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="RegularButtonPanel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">@dimen/regular_button_weight</item>
    </style>

    <style name="RegularButtonStyle" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/regular_button_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@dimen/regular_button_half_weight</item>
        <item name="android:textSize">@dimen/regular_button_size</item>
    </style>

    <style name="BasicArithmeticButtonStyle" parent="RegularButtonStyle">
        <item name="android:background">@drawable/basic_arithmetic_button_border</item>
        <item name="android:textColor">@color/colorBasicArithmeticText</item>
    </style>

    <style name="NumericButtonStyle" parent="RegularButtonStyle">
        <item name="android:background">@drawable/numeric_button_border</item>
        <item name="android:textColor">@color/colorNumericText</item>
    </style>

    <style name="NumericButtonZeroStyle" parent="RegularButtonStyle">
        <item name="android:layout_weight">@dimen/regular_button_weight</item>
        <item name="android:background">@drawable/numeric_button_border</item>
        <item name="android:textColor">@color/colorNumericText</item>
    </style>

    <style name="AdvancedArithmeticButtonStyle" parent="RegularButtonStyle">
        <item name="android:background">@drawable/advanced_arithmetic_button_border</item>
        <item name="android:textColor">@color/colorAdvancedArithmeticText</item>
    </style>
</resources>